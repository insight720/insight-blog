<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.project.blog.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="pers.project.blog.entity.RoleEntity">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
        <result property="roleLabel" column="role_label" jdbcType="VARCHAR"/>
        <result property="isDisable" column="is_disable" jdbcType="TINYINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="ResourceRoleMap" type="pers.project.blog.dto.ResourceRoleDTO">
        <id property="id" column="id"/>
        <result property="url" column="url"/>
        <result property="requestMethod" column="request_method"/>
        <collection property="roleList" ofType="java.lang.String">
            <constructor>
                <arg column="role_label"/>
            </constructor>
        </collection>
    </resultMap>

    <resultMap id="RoleDTOMap" type="pers.project.blog.dto.RoleDTO">
        <id property="id" column="id"/>
        <result property="roleName" column="role_name"/>
        <result property="roleLabel" column="role_label"/>
        <result property="createTime" column="create_time"/>
        <result property="isDisable" column="is_disable"/>
        <collection property="resourceIdList" ofType="java.lang.Integer">
            <constructor>
                <arg column="resource_id"/>
            </constructor>
        </collection>
        <collection property="menuIdList" ofType="java.lang.Integer">
            <constructor>
                <arg column="menu_id"/>
            </constructor>
        </collection>
    </resultMap>

    <sql id="Base_Column_List">
        id,role_name,role_label,
        is_disable,create_time,update_time
    </sql>

    <!-- 查询父权限 ID 不为空，且非匿名访问资源请求的主键、权限路径、请求方式及角色描述 -->
    <select id="listResourceRoles" resultMap="ResourceRoleMap">
        SELECT resource.id, resource.url, resource.request_method, `role`.role_label
        FROM tb_resource resource
                 LEFT JOIN tb_role_resource role_resource ON resource.id = role_resource.resource_id
                 LEFT JOIN tb_role `role` ON role_resource.role_id = `role`.id
        WHERE resource.parent_id IS NOT NULL
          AND resource.is_anonymous = 0
    </select>

    <select id="listRoleLabelsByUserInfoId" resultType="java.lang.String">
        SELECT `role`.role_label
        FROM tb_role `role`,
             tb_user_role user_role
        WHERE `role`.id = user_role.role_id
          AND user_role.user_id = #{userInfoId}
    </select>

    <select id="listRoleDTOs" resultMap="RoleDTOMap">
        SELECT filtered_role.id, role_name, role_label,
        create_time, is_disable, resource_id, menu_id
        FROM
        (SELECT id, role_name, role_label, create_time, is_disable
        FROM tb_role
        <if test="conditionVO.keywords != null">
            WHERE role_name LIKE CONCAT('%', #{conditionVO.keywords}, '%')
        </if>
        LIMIT #{offset}, #{size}
        ) filtered_role
        LEFT JOIN tb_role_resource role_resource ON filtered_role.id = role_resource.role_id
        LEFT JOIN tb_role_menu role_menu on filtered_role.id = role_menu.role_id
        ORDER BY filtered_role.id
    </select>

</mapper>
